<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/headImageView"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:src="@drawable/head"
        app:layout_constraintBottom_toTopOf="@id/armsLeftImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/armsLeftImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/left_bra"
        app:layout_constraintBottom_toTopOf="@id/bodyImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headImageView" />

    <ImageView
        android:id="@+id/bodyImageView"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:src="@drawable/body"
        app:layout_constraintBottom_toTopOf="@id/armsRightImageView"
        app:layout_constraintEnd_toStartOf="@id/armsRightImageView"
        app:layout_constraintStart_toEndOf="@id/armsLeftImageView"
        app:layout_constraintTop_toBottomOf="@id/headImageView"
        app:layout_constraintVertical_bias="0.044" />

    <ImageView
        android:id="@+id/armsRightImageView"
        android:layout_width="wrap_content"
        android:layout_height="197dp"
        android:src="@drawable/left_bra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bodyImageView"
        app:layout_constraintTop_toBottomOf="@id/headImageView"
        app:layout_constraintVertical_bias="0.168" />

    <ImageView
        android:id="@+id/armsImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/left_bra"
        app:layout_constraintBottom_toTopOf="@id/legsImageView"
        app:layout_constraintEnd_toStartOf="@id/legsImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bodyImageView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/legsImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/left_bra"
        app:layout_constraintTop_toBottomOf="@id/bodyImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/armsImageView"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
